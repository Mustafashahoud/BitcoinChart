<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="small_text_bold">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.ChartsFeature.ToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0sp</item>
        <item name="android:backgroundTint">@color/feature_charts_toggle_button_bg</item>
        <item name="android:textColor">@color/feature_charts_toggle_button_text</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="RetryStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:text">@string/retry</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>